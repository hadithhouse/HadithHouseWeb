root = true

[**]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_spaces = true
trim_trailing_whitespace = true

# trailing spaces in markdown indicate word wrap
[**.md]
trim_trailing_spaces = false
max_line_length = 80

[**.html]
indent_size = 2

[**.{ts,tsx,json,js,jsx}]
indent_size = 2
max_line_length = 80

[Jenkinsfile]
indent_size = 2
