# Editor configuration, see http://editorconfig.org
root = true

[**]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_spaces = true
trim_trailing_whitespace = true
end_of_line = lf

[**.html]
indent_size = 2

[**.{ts,json,js}]
indent_size = 2
max_line_length = 80

[*.md]
max_line_length = off
trim_trailing_whitespace = false
